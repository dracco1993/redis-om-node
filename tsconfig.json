{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "lib",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "spec/**/*.spec.ts"],
  "typedocOptions": {
    "entryPoints": ["lib/index.ts"],
    "out": "docs",
    "excludePrivate": true,
    "excludeInternal": true,
    "readme": "none"
  }
}
